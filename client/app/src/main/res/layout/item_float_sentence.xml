<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_sentence_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/c_light_grey"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_0sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/floatSentenceTv"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:textStyle="italic"
            android:textColor="@color/c_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/removeSentenceImageView"
            tools:text="THIS IS A TEST SENTENCE WHICH IS VERY LARGE" />

        <ImageView
            android:id="@+id/removeSentenceImageView"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            app:layout_constraintTop_toTopOf="@id/floatSentenceTv"
            app:layout_constraintBottom_toBottomOf="@id/floatSentenceTv"
            app:layout_constraintLeft_toRightOf="@id/floatSentenceTv"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_cross_on" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>