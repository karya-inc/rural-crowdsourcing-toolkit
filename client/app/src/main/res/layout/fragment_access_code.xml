<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <com.karyaplatform.karya.ui.views.KaryaToolbar
        android:id="@+id/appTb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_8sdp"
        android:visibility="gone"
        app:hideLanguage="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/accessCodeImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_access_code"
        app:layout_constraintBottom_toTopOf="@id/accessCodeEt"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/accessCodeEt"
        style="@style/EditText.Numeric"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="@id/accessCodeErrorIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accessCodeImage" />

    <ImageView
        android:id="@+id/accessCodeErrorIv"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/numPad"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/accessCodeEt"
        app:layout_constraintStart_toStartOf="@id/accessCodeEt"
        app:layout_constraintTop_toBottomOf="@id/accessCodeEt"
        app:srcCompat="@drawable/ic_access_code_error" />

    <ProgressBar
        android:id="@+id/loadingPb"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="@id/accessCodeErrorIv"
        app:layout_constraintLeft_toLeftOf="@id/accessCodeErrorIv"
        app:layout_constraintRight_toRightOf="@id/accessCodeErrorIv"
        app:layout_constraintTop_toTopOf="@id/accessCodeErrorIv" />

    <com.karyaplatform.karya.ui.views.numpad.NumPad
        android:id="@+id/numPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:field="@id/accessCodeEt"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
