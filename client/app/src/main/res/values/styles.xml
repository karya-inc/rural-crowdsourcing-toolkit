<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Edit Text Box -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!-- Numeric Edit Text Box -->
    <style name="EditText.Numeric">
        <item name="fontFamily">monospace</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
    </style>

    <!-- Multiline Text Box -->
    <style name="MultilineText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">?multiLineTextColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_4ssp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Error Text -->
    <style name="errorText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_2ssp</item>
        <item name="android:textColor">?errorTextColor</item>
    </style>

    <!-- Microtask Instruction Text Box -->
    <style name="MicrotaskInstructionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?microtaskInstructionBackgroundColor</item>
        <item name="android:textColor">?microtaskInstructionTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!-- Microtask Input Frame -->
    <style name="MicrotaskInputFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?microtaskInputBackgroundColor</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>

    <!-- Microtask Input Text Box -->
    <style name="MicrotaskInputText">
        <item name="android:background">@drawable/background_microtask_input_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">?microtaskInputTextColor</item>
        <item name="autoSizeMaxTextSize">@dimen/_30ssp</item>
        <item name="autoSizeMinTextSize">@dimen/_12ssp</item>
        <item name="autoSizeStepGranularity">@dimen/_2ssp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="KaryaPaymentsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_text_btn_padding_right</item>
        <item name="iconTint">@color/mtrl_text_btn_text_color_selector</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
        <item name="backgroundTint">@drawable/karya_payments_button_bg_selector</item>
    </style>

    <!-- Microtask Output Edit Text -->
    <style name="MicrotaskOutputEditText">
        <item name="android:background">@drawable/background_microtask_output_edit_text</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">?microtaskInputTextColor</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <!-- Language button styles -->
    <style name="LanguageUpdateButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
